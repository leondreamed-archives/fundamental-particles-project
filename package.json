{
	"name": "fundamental-particles",
	"version": "0.0.0",
	"prettier": "@leonzalion/prettier-config",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"prepare": "simple-git-hooks",
		"start": "node --loader ts-node/esm ./src/index.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"prepublish": "pnpm test && pnpm build",
		"lint": "eslint --cache --fix src",
		"prettier": "prettier --write src",
		"tc": "vue-tsc --noEmit"
	},
	"dependencies": {
		"canvas-confetti": "^1.4.0",
		"map-obj": "^5.0.0",
		"pinia": "^2.0.0-rc.10",
		"vue": "^3.2.25"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@leonzalion/eslint-config": "^1.0.47",
		"@leonzalion/markdownlint-config": "latest",
		"@leonzalion/prettier-config": "latest",
		"@leonzalion/tsconfig": "latest",
		"@types/canvas-confetti": "^1.4.2",
		"@types/jest": "^27.0.3",
		"@types/node": "^17.0.0",
		"@vitejs/plugin-vue": "^2.0.0",
		"autoprefixer": "^10.4.1",
		"eslint": "^8.5.0",
		"execa": "^6.0.0",
		"jest": "^27.4.5",
		"lint-staged": "^12.1.3",
		"postcss": "^8.4.5",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"tailwindcss": "^3.0.11",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"tsc-alias": "^1.5.0",
		"typescript": "^4.5.4",
		"vite": "^2.7.2",
		"vite-tsconfig-paths": "^3.3.17",
		"vue-tsc": "^0.30.2"
	},
	"simple-git-hooks": {
		"pre-commit": "node --loader ts-node/esm ./scripts/hooks/pre-commit.ts",
		"pre-push": "if [[ $(git branch --show-current) == 'main' ]]; then node --loader ts-node/esm ./scripts/hooks/pre-push.ts; fi"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	}
}
